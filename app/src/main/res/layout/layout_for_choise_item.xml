<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/notcover"
        android:id="@+id/cover" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/content"
        android:layout_toRightOf="@+id/cover"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cover"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_author"
            android:textColor="#646b6b"
            android:layout_weight="1"
            android:text="Larry King"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_name"
            android:textSize="19sp"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:text="как разговаривать"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textColor="#646b6b"
            android:id="@+id/name_reader"
            android:text="Чтец: Иванов Иван"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:background="@drawable/backsearch"
            android:text=" 149 р. " />
    </LinearLayout>
        </RelativeLayout>
</RelativeLayout>