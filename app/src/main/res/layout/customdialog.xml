<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:background="#4d545e"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:text="Вы успешно зарегистрированы в приложении. Пароль выслан Вам на почту. Используйте этот пароль, если Вам понадобится войти в личный кабинет с другого устройства."
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="#F1F1F1"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/customDialogCancel"
            android:textAllCaps="false"
            android:textColor="#F1F1F1"
            android:background="@drawable/backsearch"
            android:text="Закрыть"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>