<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/notcover"
        android:id="@+id/cover" />

    <TextView
        android:text="Как разговаривать с кем угодно, когда угодно и где угодно"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        android:id="@+id/book_name"
        android:layout_below="@+id/cover"
        android:layout_alignRight="@+id/cover"
        android:layout_alignEnd="@+id/cover" />

    <TextView
        android:text="Ларри Кинг"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/author"
        android:layout_below="@+id/book_name"
        android:layout_alignParentLeft="true"
        android:textSize="8sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_alignRight="@+id/book_name"
        android:layout_alignEnd="@+id/book_name" />


</RelativeLayout>